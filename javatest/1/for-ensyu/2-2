public class Main {
    public static void main(String[] args) {
        System.out.println("1～100の数字を入力してください。");
        int number = new java.util.Scanner(System.in) .nextInt();
        while (number % 7 != 0) {
            System.out.println("1～100の数字を入力してください。");
            
            number = new java.util.Scanner(System.in) .nextInt();
        }
        System.out.println("処理を終了しました");
    }
}